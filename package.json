{
  "name": "playwright-test-framework",
  "version": "1.0.0",
  "description": "Comprehensive Playwright test framework with E2E, API testing, and K6 performance testing",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:e2e": "playwright test tests/e2e",
    "test:api": "playwright test tests/api",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "perf:load": "k6 run performance/scripts/load-test.js",
    "perf:stress": "k6 run performance/scripts/stress-test.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "lint": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "pre-push": "npm run format && npm run lint",
    "postinstall": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.21",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.5.0",
    "lodash": "^4.17.21"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
